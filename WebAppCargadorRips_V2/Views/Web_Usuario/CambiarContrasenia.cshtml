@model WebAppCargadorRips_V2.Models.CambiarContraseniaViewModel

@{
    ViewBag.Title = "Cambio de contraseña";
}

<!-- Heading -->
<div class="card mb-4 wow fadeIn">

    <!--Card content-->
    <div class="card-body d-sm-flex justify-content-between">

        <h4 class="mb-2 mb-sm-0 pt-1">
            <span>@ViewBag.Title</span>
        </h4>

    </div>

</div>
<div class="col s12">
    <blockquote>Hola <span id="nombreUser"></span> !! desde aquí puede actualizar su información.</blockquote>
</div>

@using (Html.BeginForm("CambiarContrasenia", "Web_Usuario", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "", runat = "" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idUsuario, new { Value = @HttpContext.Current.User.Identity.Name.ToString() })

        <div class="form-group">
            @Html.LabelFor(model => model.contrasenia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.contrasenia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.contrasenia, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.contraseniaconfirm, htmlAttributes: new { @class = "control-label col-md-6 col-sm-12" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.contraseniaconfirm, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.contraseniaconfirm, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}