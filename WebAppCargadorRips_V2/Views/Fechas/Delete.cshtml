@model WebAppCargadorRips_V2.EF_Models.Fecha

@{
    ViewBag.Title = "Borrar Fecha";
}

<div class="container-fluid mt-auto">

    <!-- Heading -->
    <div class="card mb-4 wow fadeIn">

        <!--Card content-->
        <div class="card-body d-sm-flex justify-content-between">

            <h4 class="mb-2 mb-sm-0 pt-1">
                <a href="@Url.Action("Index")">Volver</a>
                <span>/</span>
                <span>@ViewBag.Title</span>
            </h4>

        </div>

    </div>
    <!-- Heading -->

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Fecha</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.nombre_fecha)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.nombre_fecha)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.valor_fecha)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.valor_fecha)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.fecha_modificacion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.fecha_modificacion)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Estado_RIPS.tipo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Estado_RIPS.tipo)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Web_Rol.nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Web_Rol.nombre)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
               @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-danger" })
            </div>
        }
    </div>
</div>
