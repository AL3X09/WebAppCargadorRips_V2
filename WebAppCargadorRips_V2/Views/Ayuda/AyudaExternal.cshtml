@{
    ViewBag.Title = "Ayuda";
    Layout = "~/Views/Shared/_LayoutExternal.cshtml";
}

<!-- Heading -->
<div class="card mb-4 wow fadeIn">

    <!--Card content-->
    <div class="card-body d-sm-flex justify-content-between">

        <h4 class="mb-2 mb-sm-0 pt-1">
            <span>@ViewBag.Title</span>
        </h4>

    </div>

</div>
<!-- Heading -->
<!-- Accordion  -->
<div class="row">
    <div class="col-12 col-sm-12">

        <div id="sectionManuales">
            <div class="card">
                <div class="card-header" id="headingManuales">
                    <h5 class="mb-0">
                        <button class="btn btn-link" data-toggle="collapse" data-target="#manuales" aria-expanded="true" aria-controls="manuales">
                            MANUALES
                        </button>
                    </h5>
                </div>
                <div id="manuales" class="collapse" aria-labelledby="headingManuales" data-parent="#sectionManuales">
                    <div class="card-body">

                        <div id="listmanuales">

                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div id="sectionPfrecuentes">
            <div class="card">
                <div class="card-header" id="headingPfrecuentes">
                    <h5 class="mb-0">
                        <button class="btn btn-link card-title" data-toggle="collapse" data-target="#pfrecuentes" aria-expanded="true" aria-controls="pfrecuentes">
                            PREGUNTAS FRECUENTES
                        </button>
                    </h5>
                </div>

                <div id="pfrecuentes" class="collapse" aria-labelledby="headingPfrecuentes" data-parent="#sectionPfrecuentes">
                    <div class="card-body">

                        <div id="listpreguntas">

                        </div>

                    </div>
                </div>
            </div>

        </div>

        <div id="sectionPresentaciones">
            <div class="card">
                <div class="card-header" id="headingPresentaciones">
                    <h5 class="mb-0">
                        <button class="btn btn-link" data-toggle="collapse" data-target="#Presentaciones" aria-expanded="true" aria-controls="Presentaciones">
                            PRESENTACIONES
                        </button>
                    </h5>
                </div>
                <div id="Presentaciones" class="collapse" aria-labelledby="headingPresentaciones" data-parent="#sectionPresentaciones">
                    <div class="card-body">

                        <div id="listpresentaciones">

                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div id="sectionNormatividad">
            <div class="card">
                <div class="card-header" id="headingNormatividad">
                    <h5 class="mb-0">
                        <button class="btn btn-link" data-toggle="collapse" data-target="#normatividad" aria-expanded="true" aria-controls="normatividad">
                            NORMATIVIDAD
                        </button>
                    </h5>
                </div>
                <div id="normatividad" class="collapse" aria-labelledby="headingNormatividad" data-parent="#sectionNormatividad">
                    <div class="card-body">

                        <div id="listresolucionesnormas">

                        </div>

                    </div>
                </div>
            </div>

        </div>

        <div id="sectionAdscrita">
            <div class="card">
                <div class="card-header" id="headingAdscrita">
                    <h5 class="mb-0">
                        <button class="btn btn-link" data-toggle="collapse" data-target="#adscrita" aria-expanded="true" aria-controls="adscrita">
                            RED ADSCRITA
                        </button>
                    </h5>
                </div>
                <div id="adscrita" class="collapse" aria-labelledby="headingAdscrita" data-parent="#sectionAdscrita">
                    <div class="card-body">

                        <div id="listdocredascrita">

                        </div>

                    </div>
                </div>
            </div>

        </div>

    </div>
</div>

<div class="row">
<hr />
</div>
<!--Modal dinamico-->
<div class="row" id="modaldiinamico">
    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!--/Accordion  -->

<div class="row" id="divcontactos">

</div>
